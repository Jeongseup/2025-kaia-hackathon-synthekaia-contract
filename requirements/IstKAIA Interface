pragma solidity ^0.8.19;

/**
 * @title IstKAIA Interface
 * @notice Defines the necessary functions to interact with the stKAIA contract.
 */
interface IstKAIA {
    /**
     * @notice Stakes KAIA for a specific recipient.
     * @dev This function is payable and expects KAIA to be sent with the call.
     * @param recipient The address that will receive the stKAIA shares.
     */
    function stakeFor(address recipient) external payable;

    /**
     * @notice Returns the stKAIA balance of an account.
     * @dev The balance represents the amount of underlying KAIA the user can eventually claim,
     * calculated from their share of the total pool.
     * @param account The address to query the balance of.
     * @return The balance in stKAIA.
     */
    function balanceOf(address account) external view returns (uint256);

    /**
     * @notice Transfers stKAIA tokens from the caller to a recipient.
     * @param recipient The address to transfer to.
     * @param amount The amount to transfer.
     * @return A boolean value indicating whether the operation succeeded.
     */
    function transfer(address recipient, uint256 amount) external returns (bool);
}
